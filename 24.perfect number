#include <stdio.h>
int main() {
    int num, sum = 0;
    printf("Enter an integer: ");
    scanf("%d", &num);
    for (int i = 1; i <= num / 2; i++) {
        if (num % i == 0) {
            sum += i;
        }
    }
    if (sum == num && num != 0) {
        printf("%d is a perfect number.\n", num);
    } else {
        printf("%d is not a perfect number.\n", num);
    }
    return 0;
}
output
Enter an integer: 555
555 is not a perfect number.
